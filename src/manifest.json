{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "0.0.1",
	"author": "KostKP",
	"homepage_url": "https://github.com/KostKP",
	"default_locale": "ru",
	"minimum_chrome_version": "76.0",
	"icons": {
		"128": "icons/app/icon-128.png",
		"48": "icons/app/icon-48.png",
		"38": "icons/app/icon-38.png",
		"32": "icons/app/icon-32.png",
		"19": "icons/app/icon-19.png",
		"16": "icons/app/icon-16.png"
	},
	"browser_action": {
		"default_icon": "icons/app/icon-128.png",
		"default_popup": "popup.html"
	},
	
	"background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
	
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"contextMenus"
	]
}